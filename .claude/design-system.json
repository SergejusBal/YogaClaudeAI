{
  "name": "Diet & Fitness Website Design System",
  "version": "1.0.0",
  "description": "Design system guidelines for the Diet & Fitness website based on the existing green/dark theme",

  "colors": {
    "primary": {
      "main": "#069626",
      "light": "#4CAF50",
      "dark": "#2E7D32",
      "contrastText": "#ffffff"
    },
    "secondary": {
      "main": "#0f1f0a",
      "light": "#263238",
      "dark": "#000000",
      "contrastText": "#ffffff"
    },
    "background": {
      "default": "#0f1f0a",
      "paper": "#1a2e1a",
      "elevated": "rgba(9, 105, 38, 0.1)"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "rgba(255, 255, 255, 0.7)",
      "disabled": "rgba(255, 255, 255, 0.5)"
    },
    "accent": {
      "main": "rgba(9, 105, 38, 0.2)",
      "border": "rgba(9, 105, 38, 0.3)",
      "hover": "rgba(9, 105, 38, 0.4)"
    },
    "semantic": {
      "success": "#4CAF50",
      "warning": "#FF9800",
      "error": "#F44336",
      "info": "#2196F3"
    }
  },

  "typography": {
    "fontFamily": {
      "primary": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "monospace": "'SF Mono', Monaco, Inconsolata, 'Roboto Mono', Consolas, 'Courier New', monospace"
    },
    "fontSizes": {
      "xs": "12px",
      "sm": "14px",
      "base": "16px",
      "lg": "18px",
      "xl": "20px",
      "2xl": "24px",
      "3xl": "30px",
      "4xl": "36px",
      "5xl": "48px",
      "6xl": "60px"
    },
    "fontWeights": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeights": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.6,
      "loose": 2.0
    },
    "headingScale": {
      "h1": { "fontSize": "48px", "fontWeight": 700, "lineHeight": 1.2 },
      "h2": { "fontSize": "40px", "fontWeight": 600, "lineHeight": 1.2 },
      "h3": { "fontSize": "32px", "fontWeight": 600, "lineHeight": 1.3 },
      "h4": { "fontSize": "24px", "fontWeight": 600, "lineHeight": 1.3 },
      "h5": { "fontSize": "20px", "fontWeight": 600, "lineHeight": 1.4 },
      "h6": { "fontSize": "18px", "fontWeight": 600, "lineHeight": 1.4 }
    }
  },

  "spacing": {
    "base": 8,
    "scale": {
      "0": "0px",
      "1": "4px",
      "2": "8px",
      "3": "12px",
      "4": "16px",
      "5": "20px",
      "6": "24px",
      "8": "32px",
      "10": "40px",
      "12": "48px",
      "16": "64px",
      "20": "80px",
      "24": "96px",
      "32": "128px"
    },
    "component": {
      "buttonPadding": "12px 24px",
      "inputPadding": "12px 16px",
      "cardPadding": "24px",
      "sectionPadding": "48px 0"
    }
  },

  "layout": {
    "breakpoints": {
      "xs": "375px",
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    "containers": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1200px",
      "2xl": "1200px"
    },
    "grid": {
      "columns": 12,
      "gutter": "24px",
      "margin": "16px"
    }
  },

  "shadows": {
    "sm": "1px 0 2px rgba(0, 0, 0, 0.6)",
    "md": "0 4px 6px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px rgba(0, 0, 0, 0.1)",
    "xl": "0 20px 25px rgba(0, 0, 0, 0.1)"
  },

  "borders": {
    "width": {
      "thin": "1px",
      "medium": "2px",
      "thick": "4px"
    },
    "radius": {
      "none": "0",
      "sm": "4px",
      "md": "8px",
      "lg": "12px",
      "full": "9999px"
    },
    "colors": {
      "default": "rgba(9, 105, 38, 0.2)",
      "focus": "#069626",
      "error": "#F44336"
    }
  },

  "components": {
    "button": {
      "minHeight": "44px",
      "borderRadius": "8px",
      "fontWeight": 600,
      "variants": {
        "primary": {
          "backgroundColor": "#069626",
          "color": "#ffffff",
          "border": "none"
        },
        "secondary": {
          "backgroundColor": "transparent",
          "color": "#069626",
          "border": "1px solid #069626"
        },
        "ghost": {
          "backgroundColor": "transparent",
          "color": "#ffffff",
          "border": "1px solid rgba(9, 105, 38, 0.2)"
        }
      }
    },
    "input": {
      "minHeight": "44px",
      "borderRadius": "8px",
      "border": "1px solid rgba(9, 105, 38, 0.2)",
      "backgroundColor": "#0f1f0a",
      "color": "#ffffff",
      "focusBorderColor": "#069626"
    },
    "card": {
      "backgroundColor": "#0f1f0a",
      "border": "1px solid rgba(9, 105, 38, 0.2)",
      "borderRadius": "12px",
      "boxShadow": "1px 0 2px rgba(0, 0, 0, 0.6)"
    }
  },

  "accessibility": {
    "colorContrast": {
      "minimum": 4.5,
      "enhanced": 7.0
    },
    "focusIndicator": {
      "color": "#069626",
      "width": "2px",
      "style": "solid"
    },
    "touchTargets": {
      "minimum": "44px"
    }
  },

  "healthCalculatorTheme": {
    "description": "Specific styling for health calculator components",
    "calculatorCard": {
      "backgroundColor": "#0f1f0a",
      "border": "1px solid rgba(9, 105, 38, 0.2)",
      "borderRadius": "12px",
      "padding": "24px"
    },
    "resultDisplay": {
      "backgroundColor": "rgba(9, 105, 38, 0.1)",
      "border": "1px solid rgba(9, 105, 38, 0.3)",
      "borderRadius": "8px",
      "padding": "16px",
      "fontSize": "18px",
      "fontWeight": 600
    },
    "inputGroup": {
      "marginBottom": "16px",
      "label": {
        "fontSize": "14px",
        "fontWeight": 500,
        "marginBottom": "8px",
        "color": "rgba(255, 255, 255, 0.9)"
      }
    }
  },

  "designPrinciples": {
    "consistency": "Maintain consistent spacing, colors, and typography across all components",
    "accessibility": "Ensure WCAG 2.1 AA compliance with proper contrast ratios and keyboard navigation",
    "responsiveness": "Design mobile-first with responsive layouts for all screen sizes",
    "performance": "Optimize for fast loading and smooth animations",
    "usability": "Prioritize user experience with clear visual hierarchy and intuitive interactions"
  },

  "codeConventions": {
    "cssModules": {
      "naming": "kebab-case for class names",
      "structure": "BEM-like methodology with component-scoped styles",
      "variables": "Use CSS custom properties for theme values"
    },
    "components": {
      "naming": "PascalCase for component names",
      "files": "ComponentName.jsx and ComponentName.module.css",
      "props": "Consistent prop naming and TypeScript interfaces"
    }
  }
}